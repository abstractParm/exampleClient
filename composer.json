{
    "name": "paramon/example-client",
    "autoload": {
        "psr-4": {
            "Paramon\\ExampleClient\\": "src/"
        },
        "exclude-from-classmap": [
            "src/Test/"
        ]
    },
    "require": {
        "php": "^8.1",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.5",
        "phpunit/phpunit": ">=10.0",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "scripts": {
        "test": [
          "phpcs --encoding=utf-8",
          "phpunit"
        ]
    }
}
